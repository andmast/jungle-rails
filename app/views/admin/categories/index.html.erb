<section class="admin-catergories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
    <p id="notice"><%= notice %></p>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default catergories">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Date Created</th>
          <th>Updated Date</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
